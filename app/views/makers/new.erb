<h1>Sign up</h1>

<% if flash[:errors] && !flash[:errors].empty? %>
  Something went wrong:
  <ul id="errors">
    <% flash[:errors].each do |error| %>
       <li><%= error %></li>
     <% end %>
  </ul>
<% end %>
<form action="/makers" method="post">
  Name: <input name="name" type="text">
  Username: <input name="username" type="text" value="<%= @maker.username %>">
  Email: <input name="email" type="text" value="<%= @maker.email %>">
  Password: <input name="password" type="password">
  Confirm Password: <input name="password_confirmation" type="password">
  <input type="submit" value="Sign up">
</form>
